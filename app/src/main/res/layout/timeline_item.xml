<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            >
        <ImageView
                android:id="@+id/timeline_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_clock"
                android:background="@drawable/timeline_circle_flag"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/timeline_date_txt"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_alignParentTop="true"

                />
                <TextView
                        android:id="@+id/timeline_weather_txt"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:paddingRight="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                />
            </RelativeLayout>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/timeline_location"
                      android:paddingTop="10dp"
                      android:paddingLeft="15dp"
            />
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/timeline_content">

            <ImageView android:layout_width="match_parent"
                       android:layout_height="200dp"
                       android:scaleType="centerCrop"
                        android:id="@+id/timeline_img"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="200dp"
                      android:id="@+id/timeline_overlay"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/timeline_title"
                      android:textColor="#fff"
                      android:textSize="20dp"
                      android:paddingBottom="20dp"
                      android:layout_alignParentBottom="true"
                      android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>